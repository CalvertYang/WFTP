<UserControl x:Class="WFTP.Pages.Upload"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             mc:Ignorable="d" 
             d:DesignHeight="561"
             d:DesignWidth="778"
             FontFamily="Microsoft JhengHei">
    <Control.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Icons.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Colours.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Fonts.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Accents/Blue.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Accents/BaseLight.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Control.Resources>
    
    <Grid Loaded="Grid_Loaded">
        <Button Name="btnUpload"
                Width="50" 
                Height="50"
                Margin="649,11,79,500"
                Content="{StaticResource appbar_upload}" 
                Style="{DynamicResource MetroCircleButtonStyle}" 
                FontFamily="Microsoft JhengHei"  
                />
        <Button Name="btnSettingFolder"
                Width="50" 
                Height="50"
                Margin="593,11,135,500"
                Content="{StaticResource appbar_folder_open}" 
                Style="{DynamicResource MetroCircleButtonStyle}" 
                FontFamily="Microsoft JhengHei" Click="btnSettingFolder_Click" />
        <Button Name="btnUp"
                Width="50" 
                Height="50"
                Margin="649,270,79,241"
                Content="{StaticResource appbar_arrow_up}" 
                Style="{DynamicResource MetroCircleButtonStyle}" 
                FontFamily="Microsoft JhengHei" Click="btnUp_Click" />
        <Button Name="btnDown"
                Width="50" 
                Height="50"
                Margin="593,270,135,241"
                Content="{StaticResource appbar_arrow_down}" 
                Style="{DynamicResource MetroCircleButtonStyle}" 
                FontFamily="Microsoft JhengHei" Click="btnDown_Click" />

        <!--上傳列表-->
        <ListView Name="lvwToUplpad" 
                  Height="193" 
                  Margin="36,0,37,306" 
                  VerticalAlignment="Bottom"
                   ItemsSource="{Binding}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="File Name" DisplayMemberBinding="{Binding File.Name}" />
                    <GridViewColumn Header="Target Path">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=TargetPath}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                </GridView>
            </ListView.View>
        </ListView>

        <!--暫存目錄-->
        <ListView Name="lvwTempList" 
                  Height="196" 
                  Width="705"
                  Margin="36,333,0,0" 
                  HorizontalAlignment="Left" 
                  VerticalAlignment="Top" 
                  ItemsSource="{Binding}" SelectionMode="Multiple">

            <ListView.View>
                <GridView AllowsColumnReorder="True">
                    <GridViewColumn Header="File Name" DisplayMemberBinding="{Binding Name}" Width="700" />
                </GridView>
            </ListView.View>
            
        </ListView>
        <Label Content="欲上傳檔案" 
               Height="28" 
               HorizontalAlignment="Left" 
               Margin="36,24,0,0" 
               Name="lbUpload" 
               VerticalAlignment="Top" 
               FontSize="16" 
               FontFamily="Microsoft JhengHei" FontWeight="Bold" Foreground="DarkGray" />
        <Label Name="lbTempRepo" 
               Content="暫存檔案庫" 
               Height="28" 
               Margin="37,278,0,0" 
               HorizontalAlignment="Left" 
               VerticalAlignment="Top" 
               FontSize="16" 
               FontFamily="Microsoft JhengHei" Foreground="DarkGray" />
        <Label Content="" Height="28" Margin="37,304,450,0" Name="lbPath" VerticalAlignment="Top" Foreground="DarkGray" FontSize="10" FontFamily="Microsoft JhengHei" />
    </Grid>
</UserControl>
