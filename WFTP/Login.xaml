<Window x:Class="WFTP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="登入" Height="350" Width="300" xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking"
        WindowStyle="None" AllowDrop="False">
    <Grid Height="272">
        <Label Content="帳號" Height="28" HorizontalAlignment="Left" Margin="58,104,0,0" Name="label1" VerticalAlignment="Top" />
        <Label Content="密碼" Height="28" HorizontalAlignment="Left" Margin="58,138,0,0" Name="label2" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="98,109,0,0" Name="txtID" VerticalAlignment="Top" Width="120" Text="" />
        <PasswordBox Height="23" HorizontalAlignment="Left" Margin="98,143,0,0" Name="txtPassword" VerticalAlignment="Top" Width="120" />
        <Button Content="登入" Height="23" HorizontalAlignment="Left" Margin="143,216,0,0" Name="btnLogin" VerticalAlignment="Top" Width="75" Click="btnLogin_Click" />
        <CheckBox Content="記憶帳號" Height="16" HorizontalAlignment="Left" Margin="98,172,0,0" Name="chkRemberID" VerticalAlignment="Top" />
        <CheckBox Content="記憶密碼" Height="16" HorizontalAlignment="Left" Margin="98,194,0,0" Name="chRemberPwd" VerticalAlignment="Top" />
        <Image Height="56" HorizontalAlignment="Left" Margin="58,47,0,0" Name="image1" Stretch="Fill" VerticalAlignment="Top" Width="172" Source="/WFTP;component/Images/logo.jpg" />
        <Button Content="關閉" Height="23" HorizontalAlignment="Left" Margin="58,216,0,0" Name="btnClose" VerticalAlignment="Top" Width="75" Click="btnClose_Click" />
    </Grid>
</Window>
